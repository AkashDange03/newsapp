<%-include("partials/header")-%>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">NewsApp</a>
            <form class="d-flex" role="search" action="/" method="post">
                <input class="form-control me-2" type="search" placeholder="Category" aria-label="Search" name="query"></input>
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        </div>
    </nav>

    <div class="container mt-5 Flex">
    <% articles.forEach((data)=>{ %>
        <% if(data.urlToImage !== null){ %>
            
                <div class="card " style="width: 18rem;">
                    <img src="<%= data.urlToImage %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= data.title %>
                        </h5>
                        <p class="card-text"> <%= data.description.substring(0,100) + " ..." %>
                        <a href="<%= data.url %>">Read more</a></P>
                    </div>
                </div>
          
       <% } %>       
        <% }) %>
    </div>
<%- include("partials/footer") -%>